#include<stdio.h>
int main()
{
    int n;
    printf("Enter the limit :");
    scanf("%d",&n);
    int a[n];
    printf("Enter the  elements");
    for(int i=0;i<n;i++)
    
        scanf("%d",&a[i]);
        int max =a[0],ind=0;
        for(int j=1;j<n;j++)
        {
            if(a[j]>max)
            {
                max= a[j];
                ind =j ;
            }
        }
    
    printf("\n The maximum element is  %d",max);
    printf("\n The index value %d",ind);
}
